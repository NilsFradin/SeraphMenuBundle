{% extends '@SeraphMenu/back/base.html.twig' %}

{% block title %}
    Modify menu
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    {% block form_fields %}
        <div class="card-body">
            <div class="form-group">
                <label for="menu_name">{{ form_label(form.name) }}</label>
                {{ form_widget(form.name) }}
            </div>
            <div class="form-group">
                <label for="menu_slug">{{ form_label(form.slug) }}</label>
                {{ form_widget(form.slug) }}
            </div>
        </div>
    {% endblock %}

    {% block form_actions %}
        <div class="card-footer">
            <button class="btn btn-sm btn-outline-success mr-2" type="submit">
                <i class="fas fa-plus mr-1"></i>
                Modify
            </button>
            <button class="btn btn-sm btn-outline-danger btn-reset mr-2" type="reset">
                <i class="fas fa-undo mr-1"></i>
                Reset
            </button>
            <a class="btn btn-sm btn-outline-secondary" href="{{ path('seraph-list-menu') }}">
                <i class="fas fa-arrow-left mr-1"></i>
                Back
            </a>
        </div>
    {% endblock %}

    {{ form_end(form) }}
{% endblock %}