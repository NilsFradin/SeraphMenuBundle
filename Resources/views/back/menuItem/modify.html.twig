{% extends '@SeraphMenu/back/base.html.twig' %}

{% block title %}
    Modify menu item
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    {% block form_fields %}
        <div class="card-body">
            <div class="form-group">
                <label for="contentPage_fr_title">{{ form_label(form.title) }}</label>
                {{ form_widget(form.title) }}
            </div>
            <div class="form-group">
                <label for="contentPage_fr_descriptive">{{ form_label(form.url) }}</label>
                {{ form_widget(form.url) }}
            </div>
            <div class="form-group">
                <label for="contentPage_fr_active">{{ form_label(form.active) }}</label>
                <p>{{ form_widget(form.active) }}</p>
            </div>
            <div class="form-group">
                <label for="contentPage_uk_descriptiveUK">{{ form_label(form.target) }}</label>
                {{ form_widget(form.target) }}
            </div>
        </div>
    {% endblock %}

    {% block form_actions %}
        <div class="card-footer">
            <button class="btn btn-sm btn-outline-success mr-2" type="submit">
                <i class="fas fa-plus mr-1"></i>
                Modify
            </button>
            <button class="btn btn-sm btn-outline-danger btn-reset mr-2" type="reset">
                <i class="fas fa-undo mr-1"></i>
                Reset
            </button>
            <a class="btn btn-sm btn-outline-secondary" href="{{ path('seraph-list-menuItem', {'id_menu' : menu.id}) }}">
                <i class="fas fa-arrow-left mr-1"></i>
                Back
            </a>
        </div>
    {% endblock %}

    {{ form_end(form) }}
{% endblock %}